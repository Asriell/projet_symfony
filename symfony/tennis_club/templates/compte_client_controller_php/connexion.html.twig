{% extends 'base.html.twig' %}
{% block body %}

<h1>Connexion</h1>

    <form action:"{{ path('connexion') }}" method="POST">
        <div class="form-group">
            <p>Adresse e-mail</p>
            <input placeholder= "adresse e-mail" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <p>Mot de passe</p>
            <input label placeholder= "mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}